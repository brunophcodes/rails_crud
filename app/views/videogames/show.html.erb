<div class="container-md">
  <div class="d-flex mt-5" style="width:100%">
    <div class="card mb-3" style="max-width: 740px;">
      <div class="row g-0">
        <div class="col-md-4">
          <%= image_tag('https://cdn1.epicgames.com/offer/3ddd6a590da64e3686042d108968a6b2/EGS_GodofWar_SantaMonicaStudio_S2_1200x1600-fbdf3cbc2980749091d52751ffabb7b7_1200x1600-fbdf3cbc2980749091d52751ffabb7b7',width:'100%', height: '100%') %>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"> <%= @videogame.title %> </h5>
            <p class="card-text"> <%= @videogame.description %></p>
            <p class="card-text"> <strong> Price: </strong> <%= number_to_currency(@videogame.price) %></p>
            <p class="card-text"> <strong> Genre: </strong> <%= @videogame.genre %></p>
            <p class="card-text"> <strong> Platform:</strong> <%= @videogame.platform %></p>
            <p class="card-text"> <strong> Developer: </strong><%= @videogame.developer %></p>
            <p class="card-text"> <strong> Release date: </strong><%= @videogame.release_date %></p>
            <p class="card-text"><small class="text-muted">Last updated <%= @videogame.updated_at %></small></p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= link_to "Index", videogames_path %>
</div>
